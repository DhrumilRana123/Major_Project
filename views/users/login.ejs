<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h1>Login to Wanderlust</h1>
            <form method="POST" action="/login" class="needs-validation mt-4" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" id="username" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" id="password" class="form-control" required>
                </div>
                <button class="btn btn-success mt-3">Login</button>
            </form>
        </div>
    </div>
</body>